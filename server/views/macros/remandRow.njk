{% macro remandRow(remand, model, relevant) %}
    <tr class="govuk-table__row">
        <!-- Dates -->
        <td class="govuk-table__cell column-width-seventy-percent">
            <span class="govuk-!-padding-top-3">
                <b>Court case number: {{remand.charge.courtCaseRef}}</b>
            </span><br>
            <span>Court: {{remand.charge.courtLocation}}</span><br>
            <span>Case outcome: {{remand.charge.resultDescription}}</span><br>
            <span class="govuk-hint">From: {{remand.from | date('DD MMMM YYYY') }} - {{remand.fromEvent}}</span><br>
            <span class="govuk-hint">To: {{remand.to | date('DD MMMM YYYY') }} - {{remand.toEvent}}</span><br>
            <ul class="govuk-list">
                <li>{{remand.charge.offence.description}}<br>
                    <span class="govuk-hint">
                        {% if (remand.charge.offenceDate and remand.charge.offenceEndDate and remand.charge.offenceEndDate !== remand.charge.offenceDate) %}
                        Committed from {{ remand.charge.offenceDate | date('DD MMMM YYYY') }} to {{ emand.charge.offenceEndDate | date('DD MMMM YYYY') }}
                        {% elseif remand.charge.offenceDate %}
                        Committed on {{ remand.charge.offenceDate | date('DD MMMM YYYY') }}
                        {% endif %}
                    </span>
                </li>
            </ul>
        </td>
        <!-- Days -->
        <td class="govuk-table__cell govuk-!-text-align-centre"><br>{{remand.days}}
            <br>
            {% if relevant %}
                {% if model.isApplicable(remand) %}
                    <span class="moj-badge moj-badge--green">Applicable</span>
                {% else %}
                    <span class="moj-badge moj-badge--blue">Shared</span>
                {% endif %}
            {% else %}
                <span class="moj-badge moj-badge--red">Not applicable</span>
            {% endif %}
        </td>
    </tr>
{% endmacro %}