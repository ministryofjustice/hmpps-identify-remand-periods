{% extends "../../partials/layout.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{% set pageTitle = applicationName + " - test data" %}

{% block javascripts %}
    <script src="/assets/accessible-autocomplete.min.js"></script>
    <script id="autocomplete-script" src="/assets/js/autoCompletePrisonName.js"></script>
{% endblock %}

{% block content %}
    <form method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        <div class="test-content">
            <div class="govuk-!-width-one-quarter">
                {{ govukTextarea({
                    label: {
                        text: "Bulk remand identification",
                        classes: "govuk-label--s",
                        isPageHeading: false
                    },
                    name: "prisonerIds",
                    id: "prisonerIds",
                    value: prisonerIds,
                    rows: 25
                }) }}
            </div>
            <div class="govuk-!-width-two-thirds">
                {{ govukSelect({
                    label: {
                        text: "or, select an establishment",
                        classes: "govuk-label--s",
                        isPageHeading: false
                    },
                    id: "prisonId",
                    name: "prisonId",
                    placeholder: "Start typing the name of the prison",
                    items: caseloadItems
                }) }}

            </div>
            <div class="govuk-grid-row  govuk-!-margin-bottom-0 govuk-!-padding-bottom-0">
                <div class="govuk-grid-column-three-quarters ">
                    {{ govukButton({
                        text: "Calculate",
                        preventDoubleClick: true,
                        type: submit,
                        attributes: {  'data-qa': 'calculate-button' }
                    }) }}
                </div>
            </div>
        </div>
        <div>
            <p class="govuk-body">Or look at a single person's remand details</p>
            <div class="govuk-form-group">
                <label class="govuk-label" for="single-prisoner">Enter an offender number</label>
                <input class="govuk-input govuk-input--width-10 govuk-!-margin-top-1" id="width-10" name="single-prisoner" type="text">
                <button class="govuk-button" data-module="govuk-button" name="single" value="true">
            Start
          </button>
            </div>
        </div>

    </form>
{% endblock %}